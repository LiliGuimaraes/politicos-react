{
  "name": "politicos-react",
  "version": "0.2.2",
  "description": "Politicos React Client",
  "main": "index.js",
  "engines": {
    "node": ">=7.5.0"
  },
  "repository": "git@github.com:olhoneles/politicos-react.git",
  "scripts": {
    "start": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config config/webpack.config.dev.js",
    "build:lib": "rimraf lib && babel src/ -d lib/ --ignore '**/*.test.js'",
    "build:dist": "rimraf dist && webpack --config config/webpack.config.dist.js --optimize-minimize",
    "build": "npm run build:lib && npm run build:dist",
    "lint": "eslint *.js src/",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "jest --watch --env=jsdom",
    "test-ci": "CI=true jest --env=jsdom",
    "coverage": "jest --env=jsdom --coverage --no-cache"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false
  },
  "author": "Marcelo Jorge Vieira <metal@alucinados.com>",
  "license": "AGPL-1.0",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.2.0",
    "dotenv": "^4.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "enzyme-to-json": "^3.1.4",
    "es6-promise": "^4.1.1",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.5.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "html-loader": "^0.5.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "promise": "^8.0.1",
    "react-test-renderer": "^16.0.0",
    "redux-mock-store": "^1.3.0",
    "rimraf": "^2.5.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "axios": "^0.17.0",
    "es6-promise-debounce": "^1.0.1",
    "gh-pages": "^1.0.0",
    "html-webpack-plugin": "^2.30.1",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-select": "^1.0.0-rc.10",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/jest/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  }
}
